{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Reachy Mini Control",
  "version": "0.2.30",
  "identifier": "com.pollen-robotics.reachy-mini",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Reachy Mini",
        "width": 450,
        "height": 670,
        "minWidth": 450,
        "minHeight": 670,
        "maxWidth": 900,
        "maxHeight": 670,
        "center": true,
        "decorations": true,
        "transparent": false,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["app", "msi", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/uv-trampoline"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://pollen-robotics.github.io/reachy-mini-desktop-app/latest.json"
      ],
      "dangerousInsecureTransportProtocol": false,
      "dangerousAllowDowngrades": false,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDNUFFMEQwREVDQThCRDgKUldUWWk4cmUwT0JhTElVUUxJVjNoY0lzd0RLZVhtUmdNcTB6ZWRYNmxYU3piZFNOVElub0xLaTcK"
    }
  }
}